{
  "manifest_version": 3,
  "name": "CodeTranslateAI",
  "version": "0.1.0",
  "description": "Select code on a page and translate it on the fly.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
